# Twitter API Credentials (API Oficial - Gratuito: 500 tweets/mês)
TWITTER_BEARER_TOKEN=seu_bearer_token_aqui
TWITTER_API_KEY=sua_api_key_aqui
TWITTER_API_SECRET=seu_api_secret_aqui
TWITTER_ACCESS_TOKEN=seu_access_token_aqui
TWITTER_ACCESS_TOKEN_SECRET=seu_access_token_secret_aqui

# Brave Search API (Opcional - melhora qualidade das notícias)
BRAVE_API_KEY=sua_chave_brave_aqui

# OpenAI API (Opcional - conteúdo mais humano)
OPENAI_API_KEY=sua_chave_openai_aqui

# Configurações do Bot
TOTAL_TWEETS_PER_DAY=9
TECHNICAL_TWEETS=4
MEME_TWEETS=2

# Horários de postagem (formato cron)
POSTING_SCHEDULE=0 8,10,12,14,16,18,20,22,23 * * *

# Configurações do Bot
HEADLESS_MODE=false
BROWSER_TIMEOUT=30000
LOGIN_RETRY_ATTEMPTS=3

# Logs
LOG_LEVEL=info
LOG_FILE=logs/bot.log
